{
  "name": "airdrop-fullstack",
  "version": "1.0.0",
  "scripts": {
    "install": "cd airdrop-app && npm install --legacy-peer-deps",
    "build": "tsc && cd airdrop-app && npm run build",
    "postbuild": "node dist/scripts/init-db.js",
    "migrate:prod": "node dist/scripts/migrate-snapshots-sequential.js",
    "check-db": "node dist/scripts/check-db.js",
    "start": "node dist/server/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "ts-node server/server.ts",
    "client:dev": "cd airdrop-app && npm run dev",
    "migrate": "ts-node scripts/migrate-snapshots.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "typescript": "^5.6.2",
    "@types/node": "^20.16.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "ts-node": "^10.9.2"
  }
}